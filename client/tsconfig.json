{
  "compilerOptions": {
      "experimentalDecorators": true,
      "useDefineForClassFields": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist/",
      "sourceMap": true,
      "module": "esnext",
      "moduleResolution": "node",
      "target": "es6",
      "jsx": "react",
      "allowJs": true,
      "typeRoots": [
          "node_modules/@types"
      ],
      "lib": [
          "dom",
          "esnext",
          "es2017"
      ],
      "skipLibCheck": true,
  },
  "include": [
      "src/**/*.tsx",
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}
